<UserControl
	x:Class="LRReader.UWP.Views.Items.ArchiveImage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="using:Microsoft.Toolkit.Uwp.UI.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.UWP.Views.Items"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	Width="200"
	Height="275"
	DataContextChanged="UserControl_DataContextChanged"
	PointerCaptureLost="UserControl_PointerCaptureLost"
	PointerEntered="UserControl_PointerEntered"
	PointerExited="UserControl_PointerExited"
	mc:Ignorable="d">

	<UserControl.Resources>
		<converters:BoolNegationConverter x:Key="BoolNegationConverter" />
	</UserControl.Resources>

	<UserControl.ContextFlyout>
		<MenuFlyout>
			<MenuFlyoutItem x:Uid="/Items/ArchiveImage/Reload" Click="Reload_Click" Icon="Refresh" />
		</MenuFlyout>
	</UserControl.ContextFlyout>

	<Grid>
		<Grid x:Name="Content">
			<Image x:Name="Image" />
			<Grid
				x:Name="Overlay" Margin="4" HorizontalAlignment="Stretch"
				VerticalAlignment="Bottom" >
				<Grid.RenderTransform>
					<TranslateTransform x:Name="OverlayTransform" />
				</Grid.RenderTransform>
				<StackPanel
					x:Name="ExtraDetails" Padding="6,2" HorizontalAlignment="Left"
					x:Load="{x:Bind ShowExtraDetails, Mode=OneWay}"
					Orientation="Horizontal" Spacing="4"
					Style="{StaticResource ItemOverlayStackPanel}">
					<TextBlock
						x:Name="Resolution" Grid.Column="1" FontSize="16"
						Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
					<TextBlock x:Name="Format" FontSize="16" Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
				</StackPanel>
				<StackPanel
					x:Name="Pages" HorizontalAlignment="Right"
					x:Load="{x:Bind HideOverlay, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}"
					Orientation="Horizontal"
					Style="{StaticResource ItemOverlayStackPanel}">
					<TextBlock
						x:Name="PageCount" Padding="6,2" FontSize="16"
						Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
				</StackPanel>
			</Grid>
		</Grid>
		<Grid x:Name="MissingImageGrid" x:Load="{x:Bind Data.MissingImage, Mode=OneWay}">
			<FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" FontSize="34" Glyph="&#xE8CD;" />
		</Grid>
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup x:Name="CommonStates">
				<VisualState x:Name="Visible"/>
				<VisualState x:Name="Hidden" >
					<VisualState.Setters>
						<Setter Target="Overlay.Visibility" Value="Collapsed" />
						<Setter Target="OverlayTransform.Y" Value="32" />
					</VisualState.Setters>
				</VisualState>
				<VisualStateGroup.Transitions>
					<VisualTransition GeneratedDuration="0:0:0.15">
						<VisualTransition.GeneratedEasingFunction>
							<QuadraticEase EasingMode="EaseOut" />
						</VisualTransition.GeneratedEasingFunction>
					</VisualTransition>
				</VisualStateGroup.Transitions>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
	</Grid>
</UserControl>
