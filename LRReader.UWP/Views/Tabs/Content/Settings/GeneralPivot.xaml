<PivotItem
	x:Class="LRReader.UWP.Views.Tabs.Content.Settings.GeneralPivot"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:internal="using:LRReader.Internal"
	xmlns:local="using:LRReader.UWP.Views.Tabs.Content.Settings"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	DataContext="{Binding SettingsPageInstance, Source={StaticResource Locator}}"
	x:Uid="/Settings/GeneralPivot"
	mc:Ignorable="d">

	<PivotItem.Resources>
		<internal:NullToBooleanConverter x:Key="NullToBooleanConverter" />
		<Style BasedOn="{StaticResource ButtonRevealStyle}" TargetType="Button" />
		<internal:EnumToInt x:Key="EnumToInt" />
	</PivotItem.Resources>

	<ScrollViewer Padding="12,0" VerticalScrollBarVisibility="Auto">
		<StackPanel Padding="30,20" HorizontalAlignment="Left">
			<TextBlock Margin="0,0,0,5" FontSize="24" x:Uid="/Settings/General/Connection" />
			<ComboBox
				x:Name="ProfileSelection" MinWidth="300" Margin="0,0,0,10"
				IsEnabled="{x:Bind Data.SettingsManager.ProfilesAvailable, Mode=OneWay}"
				ItemsSource="{x:Bind Data.SettingsManager.Profiles, Mode=OneWay}"
				x:Uid="/Settings/General/ProfileSelection"
				SelectedItem="{x:Bind Data.SettingsManager.Profile, Mode=OneWay}"
				SelectionChanged="ComboBox_SelectionChanged" />
			<StackPanel Margin="0,0,0,10" Orientation="Horizontal">
				<Button Margin="0,0,10,0" Click="ButtonAdd_Click" x:Uid="/Settings/General/AddProfile" />
				<Button
					Margin="0,0,10,0" Click="ButtonEdit_Click" x:Uid="/Settings/General/EditProfile"
					IsEnabled="{x:Bind Data.SettingsManager.Profile, Mode=OneWay, Converter={StaticResource NullToBooleanConverter}}" />
				<Button x:Uid="/Settings/General/RemoveProfile">
					<Button.Flyout>
						<Flyout x:Name="RemoveFlyout">
							<StackPanel>
								<TextBlock Margin="0,0,0,12" Style="{ThemeResource BaseTextBlockStyle}"
										   x:Uid="/Settings/General/RemoveProfileNotice" />
								<Button HorizontalAlignment="Center" Click="ButtonRemove_Click" x:Uid="/Settings/General/RemoveProfileYes" />
							</StackPanel>
						</Flyout>
					</Button.Flyout>
				</Button>
			</StackPanel>
			<TextBlock Margin="0,10,0,5" FontSize="24" x:Uid="/Settings/General/Tabs"/>
			<ToggleSwitch Margin="0,0,0,10" x:Uid="/Settings/General/Categories" IsOn="{x:Bind Data.SettingsManager.OpenCategoriesTab, Mode=TwoWay}" />
			<ToggleSwitch Margin="0,0,0,10" x:Uid="/Settings/General/Bookmarks" IsOn="{x:Bind Data.SettingsManager.OpenBookmarksTab, Mode=TwoWay}" />
			<ToggleSwitch Margin="0,0,0,10" x:Uid="/Settings/General/Bookmarked" IsOn="{x:Bind Data.SettingsManager.OpenBookmarksStart, Mode=TwoWay}" />
			<ToggleSwitch Margin="0,0,0,10" x:Uid="/Settings/General/CompactMarks" IsOn="{x:Bind Data.SettingsManager.CompactBookmarks, Mode=TwoWay}" />
			<TextBlock Margin="0,10,0,5" FontSize="24" x:Uid="/Settings/General/App" />
			<ComboBox x:Name="ThemeComboBox"
				Margin="0,0,0,10" x:Uid="/Settings/General/Theme"
				SelectedIndex="{x:Bind Data.SettingsManager.Theme, Mode=TwoWay, Converter={StaticResource EnumToInt}}"/>
		</StackPanel>
	</ScrollViewer>
</PivotItem>
