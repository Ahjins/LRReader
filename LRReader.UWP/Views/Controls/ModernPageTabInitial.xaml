<Page
	x:Class="LRReader.UWP.Views.Controls.ModernPageTabInitial"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.UWP.Views.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	NavigationCacheMode="Required"
	mc:Ignorable="d">

	<ScrollViewer x:Name="ScrollViewer" VerticalScrollBarVisibility="Auto">
		<StackPanel
			Width="{x:Bind ScrollViewer.ViewportWidth, Mode=OneWay}"
			MaxWidth="1000" HorizontalAlignment="Center">
			<local:ModernGroup x:Name="Pages" />
		</StackPanel>
	</ScrollViewer>
</Page>
