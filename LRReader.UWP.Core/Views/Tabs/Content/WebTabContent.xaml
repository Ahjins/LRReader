<UserControl
	x:Class="LRReader.UWP.Core.Views.Tabs.Content.WebTabContent"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:LRReader.UWP.Core.Views.Tabs.Content"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="400"
	mc:Ignorable="d">

	<Grid>
		<WebView x:Name="WebContent" NavigationCompleted="WebContent_NavigationCompleted" NavigationStarting="WebContent_NavigationStarting"  DefaultBackgroundColor="#34353B"/>
		<TextBlock
			HorizontalAlignment="Center" VerticalAlignment="Center"
			Text="{x:Bind ViewModel.Error, Mode=OneWay}"
			Visibility="{x:Bind ViewModel.ShowError, Mode=OneWay}" FontSize="18" />
	</Grid>
</UserControl>
