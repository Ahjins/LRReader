<internal:CustomTab
	x:Class="LRReader.UWP.Core.Views.Tabs.WebTab"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:content="using:LRReader.UWP.Core.Views.Tabs.Content"
	xmlns:controls="using:Microsoft.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:internal="using:LRReader.Internal"
	xmlns:local="using:LRReader.UWP.Core.Views.Tabs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="400"
	Header="{x:Bind TabContent.ViewModel.Title, Mode=OneWay}"
	Loaded="TabViewItem_Loaded"
	mc:Ignorable="d">
	<internal:CustomTab.CustomTabControl>
		<Button Click="RefreshButton_Click" ToolTipService.ToolTip="Refresh page">
			<Viewbox MaxWidth="16" MaxHeight="16">
				<SymbolIcon Symbol="Refresh" />
			</Viewbox>
		</Button>
	</internal:CustomTab.CustomTabControl>

	<content:WebTabContent x:Name="TabContent" />
</internal:CustomTab>
