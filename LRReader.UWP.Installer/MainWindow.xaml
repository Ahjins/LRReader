<Window
	x:Class="LRReader.UWP.Installer.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:LRReader.UWP.Installer"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="http://schemas.modernwpf.com/2019"
	Title="LRReader"
	Width="962"
	Height="514"
	ui:ThemeManager.RequestedTheme="Dark"
	ui:TitleBar.ExtendViewIntoTitleBar="True"
	ui:WindowHelper.UseModernWindowStyle="True"
	Background="Transparent"
	Loaded="Window_Loaded"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">

	<Window.TaskbarItemInfo>
		<TaskbarItemInfo x:Name="TaskbarProgress" />
	</Window.TaskbarItemInfo>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Border Padding="41" Background="#CC202020">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>
				<TextBlock
					x:Name="TitleText" Margin="0,0,0,67" HorizontalAlignment="Center"
					VerticalAlignment="Bottom" FontSize="21" Text="We're getting LRReader ready for you..."
					Visibility="Collapsed" />
				<Image
					Grid.Row="1" Height="100" Margin="0,-3,0,2"
					RenderOptions.BitmapScalingMode="Fant" Source="logo.ico" />
				<Grid Grid.Row="2">
					<Button
						x:Name="InstallButton" HorizontalAlignment="Center" Click="Install_Click"
						Content="Install" Visibility="Collapsed" />
					<TextBlock x:Name="Error" HorizontalAlignment="Center" VerticalAlignment="Center" />
					<ui:ProgressBar
						x:Name="Progress" Maximum="1" Minimum="0"
						Visibility="Collapsed" />
				</Grid>
			</Grid>
		</Border>
		<TextBlock
			Margin="11,7" HorizontalAlignment="Left" VerticalAlignment="Top"
			FontSize="13" Text="LRReader" />
		<Border Grid.Column="1" Padding="41" >
			
		</Border>
	</Grid>
</Window>
