<Application
	x:Class="LRReader.UWP.Installer.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:LRReader.UWP.Installer"
	xmlns:ui="http://schemas.modernwpf.com/2019"
	Exit="Application_Exit"
	Startup="Application_Startup"
	StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ui:ThemeResources>
					<ui:ThemeResources.ThemeDictionaries>
						<ResourceDictionary x:Key="Light">
							<SolidColorBrush x:Key="GridBackground" Opacity="0.7" Color="#FFFFFF" />
						</ResourceDictionary>
						<ResourceDictionary x:Key="Dark">
							<SolidColorBrush x:Key="GridBackground" Opacity="0.05" Color="#FFFFFF" />
						</ResourceDictionary>
					</ui:ThemeResources.ThemeDictionaries>
				</ui:ThemeResources>
				<ui:XamlControlsResources />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
